{% extends "smartlink-manager/_layouts/settings" %}
{% set title = "Integrations Settings"|t('smartlink-manager') %}
{% set fullPageForm = true %}
{% set selectedSettingsItem = 'integrations' %}

{% set crumbs = [
    {
        label: smartlinkHelper.fullName|t('smartlink-manager'),
        url: url('smartlink-manager'),
    },
    {
        label: 'Settings'|t('smartlink-manager'),
        url: url('smartlink-manager/settings'),
    },
    {
        label: 'Integrations'|t('smartlink-manager'),
        url: url('smartlink-manager/settings/integrations'),
    },
] %}

{% import "_includes/forms" as forms %}

{% block content %}
    {% include 'lindemannrock-base/_components/ip-salt-error' with {
        pluginHandle: 'smartlink-manager',
        envVarName: 'SMARTLINK_MANAGER_IP_SALT'
    } %}

    <form method="post" accept-charset="UTF-8">
        {{ actionInput('smartlink-manager/settings/save') }}
        {{ csrfInput() }}
        {{ redirectInput('smartlink-manager/settings/integrations') }}
        {{ hiddenInput('section', 'integrations') }}

        <h2 style="margin-top: 0px;">{{ "Third-Party Integrations"|t('smartlink-manager') }}</h2>

        <div class="field">
            <p class="light">{{ "Integrate {pluginName} with third-party analytics and tracking services to push click events to Google Tag Manager, Google Analytics, and other platforms."|t('smartlink-manager', { pluginName: smartlinkHelper.fullName }) }}</p>
        </div>

        {% set integrationStatuses = craft.app.plugins.getPlugin('smartlink-manager').integration.getAllIntegrationStatuses() %}

        {# SEOmatic Integration #}
        {% set seomaticStatus = integrationStatuses.seomatic ?? null %}
        {% set seomaticInstalled = lrPluginInstalled('seomatic') %}
        {% set seomaticAvailable = lrPluginEnabled('seomatic') %}
        {% set seomaticPluginName = lrPluginName('seomatic', 'SEOmatic') %}
        {% set seomaticEnabled = 'seomatic' in (settings.enabledIntegrations ?? []) %}

        {# SEOmatic Integration Card #}
        <div class="integration-card" style="border: 1px solid #e3e5e8; border-radius: 4px; margin-bottom: 10px; background: white;">
            <div class="integration-header" style="padding: 15px; display: flex; justify-content: space-between; align-items: center; gap: 15px; background: {{ seomaticAvailable ? '#f7f7f7' : '#f9f9f9' }};">
                <div style="flex: 1; min-width: 0;">
                    <strong style="font-size: 15px; {{ not seomaticAvailable ? 'color: #999;' : '' }}">{{ "{pluginName} Integration"|t('smartlink-manager', { pluginName: seomaticPluginName }) }}</strong>
                    <div style="display: flex; align-items: center; gap: 10px; margin-top: 5px;">
                        {% if seomaticAvailable %}
                            {% include 'lindemannrock-base/_components/badge' with {
                                label: 'Installed & Active'|t('smartlink-manager'),
                                value: 'active',
                                colorSet: 'pluginStatus',
                            } only %}
                        {% elseif seomaticInstalled %}
                            {% include 'lindemannrock-base/_components/badge' with {
                                label: 'Installed but Disabled'|t('smartlink-manager'),
                                value: 'disabled',
                                colorSet: 'pluginStatus',
                            } only %}
                        {% else %}
                            {% include 'lindemannrock-base/_components/badge' with {
                                label: 'Not Installed'|t('smartlink-manager'),
                                value: 'notInstalled',
                                colorSet: 'pluginStatus',
                            } only %}
                            <a href="https://plugins.craftcms.com/seomatic" target="_blank" class="go">{{ "Install Plugin"|t('smartlink-manager') }}</a>
                        {% endif %}
                    </div>
                    <p class="light" style="margin: 8px 0 0 0; font-size: 12px;">{{ "Push {smartLinksName} click events to Google Tag Manager and analytics platforms for tracking redirects, button clicks, and QR code scans."|t('smartlink-manager', { smartLinksName: smartlinkHelper.lowerDisplayName }) }}</p>
                </div>
                <div style="flex-shrink: 0;">
                    {{ forms.lightswitchField({
                        label: false,
                        id: 'enableSeomaticIntegration',
                        name: 'enableSeomaticIntegration',
                        on: seomaticEnabled,
                        disabled: not seomaticAvailable or settings.isOverriddenByConfig('enabledIntegrations'),
                    }) }}
                </div>
            </div>

            {% if seomaticAvailable %}
                <div id="seomatic-settings" class="{{ not seomaticEnabled ? 'hidden' }}" style="padding: 20px; border-top: 1px solid #e3e5e8;">
                    {% if settings.isOverriddenByConfig('enabledIntegrations') %}
                        <p class="warning" style="margin-bottom: 20px;">
                            {{ "This is being overridden by the <code>enabledIntegrations</code> setting in <code>config/smartlink-manager.php</code>."|t('smartlink-manager')|raw }}
                        </p>
                    {% endif %}

                    {# Active Tracking Scripts - Only show GTM and GA4 (scripts that receive dataLayer events) #}
                    {% set dataLayerScripts = ['googleTagManager', 'gtag'] %}
                    {% set hasDataLayerScripts = false %}
                    {% for handle in dataLayerScripts %}
                        {% if seomaticStatus.scripts[handle] is defined %}
                            {% set hasDataLayerScripts = true %}
                        {% endif %}
                    {% endfor %}

                    {% if hasDataLayerScripts %}
                        <div style="margin-bottom: 20px;">
                            <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 12px;">
                                <strong style="font-size: 13px;">{{ "Active Tracking Scripts"|t('smartlink-manager') }}</strong>
                                <span class="light" style="font-size: 11px;">{{ "Scripts receiving {pluginName} events"|t('smartlink-manager', { pluginName: smartlinkHelper.fullName }) }}</span>
                            </div>
                            {% for handle in dataLayerScripts %}
                                {% if seomaticStatus.scripts[handle] is defined %}
                                    {% set script = seomaticStatus.scripts[handle] %}
                                    <div style="background: #f7f7f7; border: 1px solid #e3e5e8; padding: 10px 12px; border-radius: 3px; margin-bottom: 8px;">
                                        <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 6px;">
                                            {% include 'lindemannrock-base/_components/status-dot' with {
                                                status: 'enabled',
                                                size: 8,
                                            } only %}
                                            <strong style="font-size: 13px;">{{ script.name }}</strong>
                                        </div>
                                        {% if script.sites is defined and script.sites is not empty %}
                                            <div style="margin-left: 16px; display: flex; flex-wrap: wrap; gap: 8px;">
                                                {% for site in script.sites %}
                                                    <div style="background: #fff; border: 1px solid #e3e5e8; padding: 3px 8px; border-radius: 2px; font-size: 11px;">
                                                        <strong>{{ site.name }}</strong>
                                                        {% if site.id is defined and site.id %}
                                                            <code style="margin-left: 4px; color: #666;">{{ site.id }}</code>
                                                        {% endif %}
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>

                    {% else %}
                        <div style="background: #fff9e6; border-left: 3px solid #f59e0b; padding: 12px 15px; margin-bottom: 20px; border-radius: 3px;">
                            <p style="margin: 0; font-size: 13px;">
                                <strong>{{ "Note"|t('smartlink-manager') }}:</strong>
                                {{ "No tracking scripts are currently configured in {pluginName}. Events will be queued but not sent until you configure GTM or Google Analytics in {pluginName}."|t('smartlink-manager', { pluginName: seomaticPluginName }) }}
                            </p>
                        </div>
                    {% endif %}

                    {# Configuration Section #}
                    <div style="background: #fafafa; border: 1px solid #e3e5e8; padding: 15px; border-radius: 4px; margin-bottom: 20px;">
                        <h4 style="margin: 0 0 15px 0; font-size: 14px; font-weight: 600;">{{ "Configuration"|t('smartlink-manager') }}</h4>

                        {# Event Type Selection - Lightswitch Toggles #}
                        {% set trackingEvents = settings.seomaticTrackingEvents ?? ['redirect', 'button_click', 'qr_scan'] %}
                        {% set isOverridden = settings.isOverriddenByConfig('seomaticTrackingEvents') %}

                        <div class="field">
                            <div class="heading">
                                <label>{{ "Tracking Events"|t('smartlink-manager') }}</label>
                                <div class="instructions">
                                    <p>{{ "Select which events to send to {pluginName}"|t('smartlink-manager', { pluginName: seomaticPluginName }) }}</p>
                                </div>
                            </div>

                            {% if isOverridden %}
                                <p class="warning" style="margin-bottom: 15px;">
                                    {{ "This is being overridden by the <code>seomaticTrackingEvents</code> setting in <code>config/smartlink-manager.php</code>."|t('smartlink-manager')|raw }}
                                </p>
                            {% endif %}

                            <div style="display: flex; flex-direction: column; gap: 12px;">
                                {# Auto-Redirects #}
                                <div style="display: flex; justify-content: flex-start; align-items: flex-start; gap: 15px; padding: 10px; background: #fafafa; border-radius: 4px;">
                                    <div style="flex-shrink: 0;">
                                        {{ forms.lightswitchField({
                                            label: false,
                                            id: 'seomaticTrackingEvents-redirect',
                                            name: 'settings[seomaticTrackingEvents][]',
                                            value: 'redirect',
                                            on: 'redirect' in trackingEvents,
                                            disabled: isOverridden,
                                        }) }}
                                    </div>
                                    <div>
                                        <strong>{{ "Auto-Redirects"|t('smartlink-manager') }}</strong>
                                        <span class="light" style="display: block; font-size: 12px; margin-top: 2px;">{{ "Mobile users automatically redirected"|t('smartlink-manager') }}</span>
                                    </div>
                                </div>

                                {# Button Clicks #}
                                <div style="display: flex; justify-content: flex-start; align-items: flex-start; gap: 15px; padding: 10px; background: #fafafa; border-radius: 4px;">
                                    <div style="flex-shrink: 0;">
                                        {{ forms.lightswitchField({
                                            label: false,
                                            id: 'seomaticTrackingEvents-button_click',
                                            name: 'settings[seomaticTrackingEvents][]',
                                            value: 'button_click',
                                            on: 'button_click' in trackingEvents,
                                            disabled: isOverridden,
                                        }) }}
                                    </div>
                                    <div>
                                        <strong>{{ "Button Clicks"|t('smartlink-manager') }}</strong>
                                        <span class="light" style="display: block; font-size: 12px; margin-top: 2px;">{{ "Manual platform selection on landing page"|t('smartlink-manager') }}</span>
                                    </div>
                                </div>

                                {# QR Code Scans #}
                                <div style="display: flex; justify-content: flex-start; align-items: flex-start; gap: 15px; padding: 10px; background: #fafafa; border-radius: 4px;">
                                    <div style="flex-shrink: 0;">
                                        {{ forms.lightswitchField({
                                            label: false,
                                            id: 'seomaticTrackingEvents-qr_scan',
                                            name: 'settings[seomaticTrackingEvents][]',
                                            value: 'qr_scan',
                                            on: 'qr_scan' in trackingEvents,
                                            disabled: isOverridden,
                                        }) }}
                                    </div>
                                    <div>
                                        <strong>{{ "QR Code Scans"|t('smartlink-manager') }}</strong>
                                        <span class="light" style="display: block; font-size: 12px; margin-top: 2px;">{{ "QR code accessed via ?src=qr parameter"|t('smartlink-manager') }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {# Event Prefix #}
                        {{ forms.textField({
                            label: "Event Prefix"|t('smartlink-manager'),
                            instructions: "Prefix for event names (e.g., 'smart_links_redirect')"|t('smartlink-manager'),
                            id: 'seomaticEventPrefix',
                            name: 'settings[seomaticEventPrefix]',
                            value: settings.seomaticEventPrefix ?? 'smart_links',
                            placeholder: 'smart_links',
                            disabled: settings.isOverriddenByConfig('seomaticEventPrefix'),
                            warning: settings.isOverriddenByConfig('seomaticEventPrefix') ?
                                "This is being overridden by the <code>seomaticEventPrefix</code> setting in <code>config/smartlink-manager.php</code>."|t('smartlink-manager')|raw : null,
                            errors: (settings is defined and settings) ? settings.getErrors('seomaticEventPrefix') : []
                        }) }}
                    </div>

                    {# Event Structure Documentation - Collapsible #}
                    <details style="margin-bottom: 15px;">
                        <summary style="cursor: pointer; font-weight: 600; font-size: 13px; padding: 10px 0; user-select: none;">
                            {{ "Event Data Structure"|t('smartlink-manager') }}
                            <span class="light" style="font-weight: normal; font-size: 12px; margin-left: 8px;">{{ "Click to view the data layer event format"|t('smartlink-manager') }}</span>
                        </summary>
                        <div style="background: #f7f7f7; padding: 15px; border-radius: 4px; font-family: monospace; font-size: 11px; overflow-x: auto; margin-top: 10px;">
<pre style="margin: 0; line-height: 1.5;">{
  event: "smart_links_redirect",
  smart_link: {
    slug: "promo-2024",
    title: "Summer Promo",
    destination_url: "https://app.example.com",
    platform: "ios",
    source: "qr",
    device_type: "mobile",
    os: "iOS 17",
    browser: "Safari",
    country: "United States",
    city: "New York",
    click_type: "button"
  }
}</pre>
                        </div>
                    </details>

                    {# Help Text #}
                    {% include 'lindemannrock-base/_components/info-box' with {
                        type: 'info',
                        variant: 'colored',
                        margin: 'none',
                        message: '<strong>' ~ "How Events Are Sent"|t('smartlink-manager') ~ ':</strong>
                            <ul style="margin: 8px 0 12px 0; padding-left: 20px; font-size: 12px; line-height: 1.6;">
                                <li style="margin-bottom: 6px;">
                                    <strong>' ~ "{pluginName} pushes events to GTM or GA4 dataLayer only"|t('smartlink-manager', {pluginName: smartlinkHelper.fullName}) ~ '</strong><br>
                                    <span class="light">' ~ "Only Google Tag Manager and Google Analytics 4 support the dataLayer format in SEOmatic"|t('smartlink-manager') ~ '</span>
                                </li>
                                <li style="margin-bottom: 6px;">
                                    <strong>' ~ "Use GTM to forward to other platforms"|t('smartlink-manager') ~ '</strong><br>
                                    <span class="light">' ~ "Configure GTM triggers and tags to forward {pluginName} events to Facebook Pixel, LinkedIn, HubSpot, etc."|t('smartlink-manager', {pluginName: smartlinkHelper.fullName}) ~ '</span>
                                </li>
                                <li>
                                    <span class="light">' ~ "Events are only sent when analytics tracking is enabled both globally and per-link"|t('smartlink-manager') ~ '</span>
                                </li>
                            </ul>
                            <p style="margin: 0; font-size: 11px; color: #666;">
                                <strong>' ~ "Architecture"|t('smartlink-manager') ~ ':</strong>
                                ' ~ smartlinkHelper.fullName ~ ' → GTM/GA4 dataLayer → GTM Triggers → Facebook/LinkedIn/HubSpot/etc.
                            </p>'
                    } %}
                </div>
            {% endif %}
        </div>
        {# End SEOmatic Integration Card #}

        {# Redirect Manager Integration #}
        {% set rmInstalled = lrPluginInstalled('redirect-manager') %}
        {% set rmAvailable = lrPluginEnabled('redirect-manager') %}
        {% set rmPluginName = lrPluginName('redirect-manager', 'Redirect Manager') %}
        {% set rmIntegrationEnabled = 'redirect-manager' in (settings.enabledIntegrations ?? []) %}
        {% set rmEvents = settings.redirectManagerEvents ?? ['slug-change'] %}

        <div class="integration-card" style="border: 1px solid #e3e5e8; border-radius: 4px; margin-bottom: 10px; background: white;">
            <div class="integration-header" style="padding: 15px; display: flex; justify-content: space-between; align-items: center; gap: 15px; background: {{ rmAvailable ? '#f7f7f7' : '#f9f9f9' }};">
                <div style="flex: 1; min-width: 0;">
                    <strong style="font-size: 15px; {{ not rmAvailable ? 'color: #999;' : '' }}">{{ "{pluginName} Integration"|t('smartlink-manager', { pluginName: rmPluginName }) }}</strong>
                    <div style="display: flex; align-items: center; gap: 10px; margin-top: 5px;">
                        {% if rmAvailable %}
                            {% include 'lindemannrock-base/_components/badge' with {
                                label: 'Installed & Active'|t('smartlink-manager'),
                                value: 'active',
                                colorSet: 'pluginStatus',
                            } only %}
                        {% elseif rmInstalled %}
                            {% include 'lindemannrock-base/_components/badge' with {
                                label: 'Installed but Disabled'|t('smartlink-manager'),
                                value: 'disabled',
                                colorSet: 'pluginStatus',
                            } only %}
                        {% else %}
                            {% include 'lindemannrock-base/_components/badge' with {
                                label: 'Not Installed'|t('smartlink-manager'),
                                value: 'notInstalled',
                                colorSet: 'pluginStatus',
                            } only %}
                            <a href="https://github.com/LindemannRock/craft-redirect-manager" target="_blank" class="go">{{ "Install Plugin"|t('smartlink-manager') }}</a>
                        {% endif %}
                    </div>
                    <p class="light" style="margin: 8px 0 0 0; font-size: 12px;">{{ "Create permanent redirect records when {pluginName} slugs change. Provides centralized redirect management and analytics tracking."|t('smartlink-manager', {pluginName: smartlinkHelper.lowerDisplayName}) }}</p>
                </div>
                <div style="flex-shrink: 0;">
                    {{ forms.lightswitchField({
                        label: false,
                        id: 'enableRedirectManagerIntegration',
                        name: 'enableRedirectManagerIntegration',
                        on: rmIntegrationEnabled,
                        disabled: not rmAvailable or settings.isOverriddenByConfig('enabledIntegrations'),
                    }) }}
                </div>
            </div>

            {% if rmAvailable %}
                <div id="redirect-manager-settings" class="{{ not rmIntegrationEnabled ? 'hidden' }}" style="padding: 20px; border-top: 1px solid #e3e5e8;">
                    {% if settings.isOverriddenByConfig('enabledIntegrations') %}
                        <p class="warning" style="margin-bottom: 20px;">
                            {{ "This is being overridden by the <code>enabledIntegrations</code> setting in <code>config/smartlink-manager.php</code>."|t('smartlink-manager')|raw }}
                        </p>
                    {% endif %}

                    {# Configuration Section #}
                    <div style="background: #fafafa; border: 1px solid #e3e5e8; padding: 15px; border-radius: 4px; margin-bottom: 20px;">
                        <h4 style="margin: 0 0 15px 0; font-size: 14px; font-weight: 600;">{{ "Configuration"|t('smartlink-manager') }}</h4>

                        {% set isOverridden = settings.isOverriddenByConfig('redirectManagerEvents') %}

                        <div class="field">
                            <div class="heading">
                                <label>{{ "Automatic Redirect Creation"|t('smartlink-manager') }}</label>
                                <div class="instructions">
                                    <p>{{ "Select which events should create permanent redirects in {pluginName}"|t('smartlink-manager', { pluginName: rmPluginName }) }}</p>
                                </div>
                            </div>

                            {% if isOverridden %}
                                <p class="warning" style="margin-bottom: 15px;">
                                    {{ "This is being overridden by the <code>redirectManagerEvents</code> setting in <code>config/smartlink-manager.php</code>."|t('smartlink-manager')|raw }}
                                </p>
                            {% endif %}

                            <div style="display: flex; flex-direction: column; gap: 12px;">
                                {# Slug Changes #}
                                <div style="display: flex; justify-content: flex-start; align-items: flex-start; gap: 15px; padding: 10px; background: #fafafa; border-radius: 4px;">
                                    <div style="flex-shrink: 0;">
                                        {{ forms.lightswitchField({
                                            label: false,
                                            id: 'redirectManagerEvents-slug-change',
                                            name: 'settings[redirectManagerEvents][]',
                                            value: 'slug-change',
                                            on: 'slug-change' in rmEvents,
                                            disabled: isOverridden,
                                        }) }}
                                    </div>
                                    <div>
                                        <strong>{{ "Slug Changes"|t('smartlink-manager') }}</strong>
                                        <span class="light" style="display: block; font-size: 12px; margin-top: 2px;">{{ "Change slug from <code>promo-2024</code> to <code>promo-2025</code> → Creates <code>/go/promo-2024</code> → <code>/go/promo-2025</code>"|t('smartlink-manager')|raw }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Help Text #}
                    {% include 'lindemannrock-base/_components/info-box' with {
                        type: 'info',
                        variant: 'colored',
                        margin: 'none',
                        message: '<strong>' ~ "Benefits of This Integration"|t('smartlink-manager') ~ ':</strong>
                            <ul style="margin: 8px 0 0 0; padding-left: 20px; font-size: 12px; line-height: 1.6;">
                                <li style="margin-bottom: 6px;">
                                    <strong>' ~ "Centralized Management"|t('smartlink-manager') ~ '</strong> –
                                    ' ~ "View and manage all redirects ({pluginName} + regular pages) in one place"|t('smartlink-manager', {pluginName: smartlinkHelper.pluralLowerDisplayName}) ~ '
                                </li>
                                <li style="margin-bottom: 6px;">
                                    <strong>' ~ "Analytics Tracking"|t('smartlink-manager') ~ '</strong> –
                                    ' ~ "See how many people try to access deleted or changed {pluginName}, their devices, browsers, and countries"|t('smartlink-manager', {pluginName: smartlinkHelper.pluralLowerDisplayName}) ~ '
                                </li>
                                <li style="margin-bottom: 6px;">
                                    <strong>' ~ "Persistent Redirects"|t('smartlink-manager') ~ '</strong> –
                                    ' ~ "Redirects persist even if {pluginName} is deleted, preventing broken links permanently"|t('smartlink-manager', {pluginName: smartlinkHelper.lowerDisplayName}) ~ '
                                </li>
                                <li>
                                    <strong>' ~ "Source Tracking"|t('smartlink-manager') ~ '</strong> –
                                    ' ~ "{rmPluginName} shows which plugin created each redirect for better organization"|t('smartlink-manager', {rmPluginName: rmPluginName}) ~ '
                                </li>
                            </ul>'
                    } %}
                </div>
            {% endif %}
        </div>
        {# End Redirect Manager Integration Card #}

        {# Hidden field to track enabled integrations #}
        {% set enabledIntegrationsArray = [] %}
        {% if seomaticAvailable and seomaticEnabled %}
            {% set enabledIntegrationsArray = enabledIntegrationsArray|merge(['seomatic']) %}
        {% endif %}
        {% if rmAvailable and rmIntegrationEnabled %}
            {% set enabledIntegrationsArray = enabledIntegrationsArray|merge(['redirect-manager']) %}
        {% endif %}

        <input type="hidden"
               name="settings[enabledIntegrations]"
               value="{{ enabledIntegrationsArray|json_encode }}"
               id="enabledIntegrationsField">

        {% js %}
            function updateEnabledIntegrations() {
                var integrations = [];

                // Check SEOmatic
                if ($('#enableSeomaticIntegration').length && $('#enableSeomaticIntegration').find('input[type="hidden"]').val() === '1') {
                    integrations.push('seomatic');
                }

                // Check Redirect Manager
                if ($('#enableRedirectManagerIntegration').length && $('#enableRedirectManagerIntegration').find('input[type="hidden"]').val() === '1') {
                    integrations.push('redirect-manager');
                }

                $('#enabledIntegrationsField').val(JSON.stringify(integrations));
            }

            // SEOmatic toggle
            $('#enableSeomaticIntegration').on('change', function() {
                var isEnabled = $(this).find('input[type="hidden"]').val() === '1';

                updateEnabledIntegrations();

                if (isEnabled) {
                    $('#seomatic-settings').removeClass('hidden').slideDown(200);
                } else {
                    $('#seomatic-settings').slideUp(200, function() {
                        $(this).addClass('hidden');
                    });
                }
            });

            // Redirect Manager toggle
            $('#enableRedirectManagerIntegration').on('change', function() {
                var isEnabled = $(this).find('input[type="hidden"]').val() === '1';

                updateEnabledIntegrations();

                if (isEnabled) {
                    $('#redirect-manager-settings').removeClass('hidden').slideDown(200);
                } else {
                    $('#redirect-manager-settings').slideUp(200, function() {
                        $(this).addClass('hidden');
                    });
                }
            });
        {% endjs %}

        <div class="buttons">
            <button type="submit" class="btn submit">{{ "Save Settings"|t('smartlink-manager') }}</button>
        </div>
    </form>

    {% include 'lindemannrock-base/_components/plugin-credit' %}
{% endblock %}
